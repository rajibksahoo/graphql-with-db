# User Mutations
type Mutation {
    createUser(input: UserInput!): User
    updateUser(id: UUID!, input: UserInput!): User
    deleteUser(id: UUID!): Boolean

    # Meal Mutations
    createMeal(input: MealInput!): Meal
    updateMeal(id: UUID!, input: MealInput!): Meal
    deleteMeal(id: UUID!): Boolean

    # Meal Plan Mutations
    createMealPlan(input: MealPlanInput!): MealPlan
    updateMealPlan(id: UUID!, input: MealPlanInput!): MealPlan
    deleteMealPlan(id: UUID!): Boolean
}
